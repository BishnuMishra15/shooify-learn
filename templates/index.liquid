<h1>Hello Azah</h1>
<div class="product-wrapper-box">
  {% for product in collections['home-page'].products %}
    <div class="product-wrapper">
      <div class="image-box">
        <img
          src="{{ product.featured_image | image_url: width:200  }}"
          width=""
          height=""
          class="product-image"
        >
      </div>
      <div class="product-details">
        <div class="details">
          {{ product.title | link_to: product.url }}
          {{ product.price | money }}
          {{ product.description }}
        </div>
        <div>
          <form action="/cart/add" method="post" enctype="multipart/form-data">
            <input type="hidden" name="id" value="{{ product.variants.first.id }}">
            <input type="submit" value="Add to Cart">
          </form>
        </div>
      </div>
    </div>
  {% endfor %}
</div>

<style>
  .product-wrapper-box {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
  }

  .product-wrapper {
    max-width: 500px;
    width: 100%;
    display: flex;
    flex-direction: column;
    margin: 10px;
  }
  .image-box {
    overflow: hidden;
  }

  .product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: all 4s ease;
  }
  .product-image:hover {
    filter: brightness(110%);
    scale: 1.3;
    transform: rotate3d(180 deg);
  }
  .product-details {
    display: flex;
    align-items: center;
  }
  .details {
    flex-basis: 50%;
    display: flex;
    flex-direction: column;
  }
</style>
